extends ../includes/_layout
block var
	- title = '入会案内 | Meana'
	- keywords = '上尾,ストレッチ,ダンス,スタジオ,パーソナル,キッズ,ボディケア,フェイスケア'
	- url = 'https://www.meana-studio.com/'
	- image = 'image'
	- site_name = 'site_name'
	- description = '上尾駅徒歩10分のダンス・ストレッチスタジオ、MEANA STUDIO。パーソナルトレーニング、ストレッチ、キッズレッスン、ボディケア・フェイスケアなども行ってます。'
block body
	section.herotitle-container.jointop(style="background-image:url(uploads/bg_studiotop.png);")
		div.hero-content
			div.en Studio
			h1.uk-animation-slide-bottom-medium 入会案内
			p.uk-animation-slide-bottom-medium Studio MEANAはチケット制。１レッスン受講ごとに１枚チケットが必要になります。
	div.uk-container.jointop
		div.joincard-container(uk-height-match="target: .card-body" uk-scrollspy="target: > .card; cls: uk-animation-slide-bottom-medium; delay: 50")
			div.card
				div.card-img(style="background-image:url(../uploads/option01.jpg);")
				div.card-body
					h3 パーソナルトレーニング
					table
						tbody
							tr
								td 40minチケット
								td 1枚
								td &yen;4,600
							tr
								td 40minチケット
								td 10枚
								td &yen;43,000
							tr
								td 60minチケット
								td 1枚
								td &yen;6,800 
							tr
								dt 60minチケット
								td 10枚
								td &yen;62,000
							tr
								td 初回カウンセリング 
								td(colspan="2") &yen;10,000
			div.card
				div.card-img(style="background-image:url(../uploads/option02.jpg);")
				div.card-body
					h3 Oil Options
					table
						tbody
							tr
								td アロマブレンド
								td &yen;500
							tr
								td THANNマッサージオイル
								td &yen;1,000
							tr
								td サンタマリアノヴェッラ マッサージオイル for Body
								td &yen;1,500
							tr
								td サンタマリアノヴェッラ スキンケア for FACE
								td &yen;1,000