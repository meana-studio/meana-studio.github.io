extends ../includes/_layout
block var
	- title = 'お客様の声 | Meana'
	- keywords = '上尾,ストレッチ,ダンス,スタジオ,パーソナル,キッズ,ボディケア,フェイスケア'
	- url = 'https://www.meana-studio.com/'
	- image = 'image'
	- site_name = 'site_name'
	- description = '上尾駅徒歩10分のダンス・ストレッチスタジオ、MEANA STUDIO。パーソナルトレーニング、ストレッチ、キッズレッスン、ボディケア・フェイスケアなども行ってます。'
block body
	section#program-container.section
		div.uk-card-header
			h1 サービスメニュー
			p MEANAでは、お子様から高齢者まで様々な会員の方がトレーニングをされています。実際に体験された方々からの声をいくつかご紹介いたします。
		div.uk-container
			div(class="uk-grid uk-child-width-1-2\@m")
				div.uk-card
					div.uk-background-cover(style="background-image:url(../uploads/home_service_personal.jpg);").shadow-lg
						div.service-inner
							div.service-detail
								h3 パーソナルトレーニング
								p 一人ひとりのカラダの特性や状態に合わせたオーダーメイド・トレーニング
								div.more
									a.btn.btn-primary.btn-lg(href="/program/personal/") もっと見る
				div.uk-card
					div.uk-background-cover(style="background-image:url(../uploads/home_service_body.jpg);").shadow-lg
						div.service-inner
							div.service-detail
								h3 ボディメンテナンス
								p テンピュール®社製のベッド上で行うパーソナルストレッチ＆各種マッサージ。
								div.more
									a.btn.btn-primary.btn-lg(href="/program/body/") もっと見る
				div.uk-card
					div.uk-background-cover(style="background-image:url(../uploads/home_service_studio.jpg);").shadow-lg
						div.service-inner
							div.service-detail
								h3 スタジオレッスン
								p ５〜15人のグループで行うスタジオ・レッスン。
								div.more
									a.btn.btn-primary.btn-lg(href="/program/studio/") もっと見る
				div.uk-card
					div.uk-section-media.uk-background-cover(style="background-image:url(../uploads/home_service_kids.jpg);").shadow-lg
						div.service-inner
							div.service-detail
								h3 キッズレッスン
								p 12歳までのキッズ専用のグループレッスン。
								div.more
									a.btn.btn-primary.btn-lg(href="/program/kids/") もっと見る