block var
doctype html
html(lang="ja")
	head
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title #{title}
		block meta
			meta(name="description", content=description)
			meta(name="keywords", content=keywords)
			meta(property='og:site_name', content='meana')
			meta(property='og:url', content=url)
			meta(property='og:type', content='website')
			meta(property='og:image', content=image)
			meta(name='twitter:card', content='summary')
			link(rel="apple-touch-icon" href="/assets/ico/apple-touch-icon57.png")
			link(rel="apple-touch-icon" sizes="57x57" href="/assets/ico/apple-touch-icon57.png")
			link(rel="apple-touch-icon" sizes="72x72" href="/assets/ico/apple-touch-icon72.png")
			link(rel="apple-touch-icon" sizes="114x114" href="/assets/ico/apple-touch-icon114.png")
			link(rel="apple-touch-icon" sizes="144x144" href="/assets/ico/apple-touch-icon144.png")
		block link
			link(href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:100,300,400,500,700,900&display=swap&subset=japanese" rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet")
			link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
			link(rel="stylesheet" href="/assets/css/uikit.min.css")
			link(rel="stylesheet" href="https://use.typekit.net/mty5bcn.css")
			link(rel='stylesheet', href="/assets/css/style.css")
		block end_link
	body(class=bodyclass)
		include ./_header.pug
		div#container
			block body
		footer#footer &copy; Studio Meana
		div#offcanvas-usage(uk-offcanvas="mode: push;overlay: true")
			div.uk-offcanvas-bar.uk-offcanvas-bar-animation.uk-offcanvas-push
				button.uk-offcanvas-close.uk-icon.uk-close(type="button" uk-close)
				div.uk-panel.uk-margin-large-top
					ul.uk-nav.uk-nav-default.tm-nav
						li
							a(href="/program/") メニューTOP
						li
							a(href="/program/personal/") パーソナルトレーニング
						li
							a(href="/program/body/") ボディメンテナンス
						li
							a(href="/program/studio/") スタジオレッスン
						li
							a(href="/program/kids/") キッズレッスン
						li
							a(href="/about/") スタジオ
						li
							a(href="/join/") 料金・入会
						li
							a(href="/voice/") お客様の声
						li
							a(href="/blog/") ブログ
					div.contact.uk-margin-top
						a.uk-button.uk-button-primary.uk-width-1-1(href='/inquiry/')
							span.icon(uk-icon="mail")
							span お問い合わせ
		script(src="/assets/js/module/uikit.min.js")
		script(src="/assets/js/module/uikit-icons.min.js")
		script(src="/assets/js/common.js")
		block end_of_body